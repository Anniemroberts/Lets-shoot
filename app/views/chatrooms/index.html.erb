<div class="panel panel-default">
  <div class="panel-body">
<h1>Chatrooms</h1>
<hr>
<%= link_to 'New Chatroom', new_chatroom_path, type:"button", class:"btn-sm btn-info" %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr>
        <td><%= chatroom.name %></td>
        <td><%= link_to 'View', chatroom, type:"button", class:"btn-sm btn-info" %></td>
        <!-- <td><%# link_to 'Edit', edit_chatroom_path(chatroom) %></td> -->
        <!-- <td><%# link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <td><%= link_to "Join", chatroom_chatroom_users_path(chatroom), method: :post, type:"button", class:"btn-sm btn-info" %></td>
        <td><%= link_to "Leave", chatroom_chatroom_users_path(chatroom), method: :delete, type:"button", class:"btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
